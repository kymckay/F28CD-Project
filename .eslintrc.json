{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-warning-comments": 1,
        "no-console": 1,
        "eqeqeq": 2,
        "block-scoped-var": 2,
        "class-methods-use-this": 2,
        "no-var": 2,
        "no-useless-concat": 2,
        "prefer-template": 2
    },
    "overrides": [
      {
        "files": ["**/*.test.js"],
        "extends": [
          "plugin:jest/recommended"
        ],
        "env": { "jest": true }
      },
      {
        "files": ["server/*.js"],
        "env": { "node": true }
      },
      {
        "files": [
          "public/src/*.js"
        ],
        "env": { "browser": true }
      }
    ]
}